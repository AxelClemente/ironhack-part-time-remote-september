
<div id="form">
  <h2>Signup</h2>

  <form action="/auth/signup" method="POST" enctype="multipart/form-data">
 
    <label> Username
      <input type="text" name="fullName" placeholder="ironhacker" required/>
    </label>
 
    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" required/>
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" required/>
    </label>

    <label>
      <input type="file" name="imageUrl" id="">
    </label>
 
    <button type="submit">Create account</button>
 
    {{!-- error message will be added here --}}
  </form>
</div>